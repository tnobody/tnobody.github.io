---
layout: default
pagination:
  data: collections.posts
  size: 10
  reverse: true
  alias: posts
---

<h1>Welcome to my Blog</h1>

{% for post in posts %}
  <article class="prose">
    <h2>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h2>
    <date>
        {{ post.date }}
    </date>
  </article>
{% endfor %}